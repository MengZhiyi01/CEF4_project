{
    "data": {
        "input_path": "../final_filtered_data_1min.parquet",
        "train_test_split_date": "2024-12-14",
        "train_val_split_ratio": 0.889,
        "datetime_col": "datetime",
        "instrument_col": "instrument",
        "feature_start_idx": 2,
        "feature_end_idx": 133,
        "label_col": "label_vwap_5m",
        "normalize": true,
        "handle_missing": "forward_fill",
        "seq_len": 60,
        "pred_len": 1
    },
    "model": {
        "name": "FuturesTransformer",
        "d_model": 256,
        "n_heads": 8,
        "n_layers": 4,
        "d_ff": 1024,
        "dropout": 0.1,
        "max_seq_len": 100
    },
    "training": {
        "batch_size": 512,
        "num_epochs": 100,
        "learning_rate": 0.0003,
        "weight_decay": 1e-4,
        "early_stopping_patience": 15,
        "gradient_clip_value": 1.0,
        "optimizer": "adamw",
        "scheduler": "cosine",
        "scheduler_params": {
            "T_max": 100,
            "eta_min": 1e-6
        }
    },
    "experiment": {
        "name": "futures_transformer_v100_optimized",
        "seed": 42,
        "save_dir": "./experiments",
        "log_interval": 50,
        "save_best_only": true
    },
    "feature_engineering": {
        "add_time_features": true,
        "cross_sectional_normalize": true,
        "add_rolling_features": false,
        "rolling_windows": [5, 10, 20]
    }
} 